<Window 
    x:Class="WpfClient.Views.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SplashScreen" WindowStartupLocation="CenterScreen" 
        ShowInTaskbar="False" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Image Name="splashBackImage" Stretch="Fill"/>
        <Grid Height="208" Width="750" Background="Orange">
            <Border  BorderBrush="DarkOrange" BorderThickness="3" />
            <Label Name="lblCopyright" FontSize="10" FontWeight="Bold" Foreground="SlateBlue">
                Integra IT Solutions, Kyiv, Ukraine
            </Label>

            <Label Name="lblTitle" Margin="0,22,0,80" FontSize="42" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="MintCream">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="30" Opacity="1" ShadowDepth="0" Direction="0"/>
                </Label.Effect>
                Загрузка Меню Самообслуживания
            </Label>

            <Label Name="lblMessage" Margin="19,0,17,25" FontSize="20" VerticalAlignment="Bottom" Foreground="Blue">
            </Label>
        </Grid>
    </Grid>
</Window>
