<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="fileTrace" xsi:type="File" fileName="Logs/NoodleD.log" layout="${date}|${level}|${message}"/>
    <target name="fileError" xsi:type="File" fileName="Logs/NoodleD.log" layout="${date}|${level}|${message}"/>
  </targets>


  <rules>
    <logger name="*" minlevel="Trace" writeTo="fileTrace" />
  </rules>

</nlog>